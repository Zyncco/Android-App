<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.zync.zync">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".ZyncApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <service android:name=".ZyncClipboardService"/>

        <activity android:name=".activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="image/*"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.SettingsActivity"
                android:label="@string/zync_settings"
                android:parentActivityName=".activities.SignInActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="co.zync.zync.activities.SignInActivity"/>
        </activity>
        <activity android:name=".activities.intro.PasswordActivity">
        </activity>
    </application>

</manifest>